# BlueStar Development Build â€” with hot reload and dev dependencies

FROM python:3.12-slim

WORKDIR /app
COPY pyproject.toml .
RUN pip install --no-cache-dir -e ".[dev,agents,mcp,ingestion]"

COPY src/ src/
COPY tests/ tests/
COPY config/ config/

ENV PYTHONUNBUFFERED=1
EXPOSE 8080

CMD ["python", "-m", "uvicorn", "bluestar.api.app:create_app", "--factory", "--host", "0.0.0.0", "--port", "8080", "--reload"]
